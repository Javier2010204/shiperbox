<p id="notice"><%= notice %></p>

<h1>Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Tracking</th>
      <th>Code</th>
      <th>Estado</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buys.each do |buy| %>
      <tr>
        <td><%= buy.tracking %></td>
        <td><%= buy.code %></td>
        <td><%= buy.status %></td>
        <td><%= buy.user.name %></td>
        <td><%= link_to 'Ver', buy %></td>
        <td><%= link_to 'Editar', edit_buy_path(buy) %></td>
        <td><%= link_to 'Eliminar', buy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Nuevo Pedido', new_buy_path %>
