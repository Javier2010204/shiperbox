<div class="container text-center mt-lg-5">
  <div class="row">
    <div class="col-md-6">
      <div class="login-cover">
      </div>
    </div>
    <div class="col-xs-10 col-md-6">
      <h2 class="mt-lg-4">Crear Cuenta</h2>
      <p class="text-justify">Bienvenido a ShiperBox, crea tu cuenta y empieza a cotizar productos y hacer pedidos</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group text-justify">
          <%= f.label 'Correo electronico' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="form-group text-justify">
          <%= f.label 'Constraseña' %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        </div>

        <div class="form-group text-justify">
          <%= f.label 'Confirma tu contraseña' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label 'recordarme' %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Crear Cuenta", class: 'btn btn-block purple white-text' %>
        </div>
      <% end %>

      <div class="top-space">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

